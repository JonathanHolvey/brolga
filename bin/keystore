#! /usr/bin/env pipenv-run

"""Keystore - Key management for Docker deployment webhooks

Usage:
    keystore add <name>
    keystore list
    keystore delete <id>
    keystore -h | --help

Arguments:
    <name>  A descriptive name to assign to the key
    <id>    The ID of the key

"""

from os import environ as env
from os import path

from docopt import docopt
from tabulate import tabulate

from keys import Keystore

if __name__ == '__main__':
    args = docopt(__doc__)
    keys = Keystore(path.join(env['CONFIG_PATH'], 'keys'))

    if args.get('add'):
        name = args.get('<name>')
        key = keys.add(name)
        keys.save()
        print('Added new key for {}:\n{}'.format(name, key))

    if args.get('list'):
        headers = ['ID', 'Name']
        rows = [[i, k['name']] for i, k in keys.keys.items()]
        print(tabulate(rows, headers=headers))

    if args.get('delete'):
        key_id = args.get('<id>')
        key = keys.keys.get(key_id)
        if keys.delete(key_id):
            keys.save()
            print('Deleted key for {}'.format(key['name']))
        else:
            print('Key ID doesn\'t exist')
